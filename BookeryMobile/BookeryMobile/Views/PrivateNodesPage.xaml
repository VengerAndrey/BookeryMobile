<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:BookeryMobile.ViewModels;assembly=BookeryMobile"
             xmlns:models="clr-namespace:BookeryMobile.Models;assembly=BookeryMobile"
             xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
             x:Class="BookeryMobile.Views.PrivateNodesPage"
             Title="{Binding Title}"
             BackgroundColor="{DynamicResource Background}"
             Visual="Material">
    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="folder_add.png" x:DataType="viewModels:PrivateNodesViewModel"
                     Command="{Binding CreateDirectoryCommand}" />
        <ToolbarItem IconImageSource="upload.png" x:DataType="viewModels:PrivateNodesViewModel"
                     Command="{Binding UploadFileCommand}" />
    </ContentPage.ToolbarItems>
    <RefreshView x:DataType="viewModels:PrivateNodesViewModel" Command="{Binding LoadNodesCommand}"
                 IsRefreshing="{Binding IsBusy, Mode=TwoWay}">
        <CollectionView x:Name="ItemsListView"
                        ItemsSource="{Binding Nodes}"
                        SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <SwipeView>
                        <SwipeView.LeftItems>
                            <SwipeItems SwipeBehaviorOnInvoked="Close">
                                <SwipeItemView
                                    Command="{Binding Source={x:Reference ItemsListView}, Path=BindingContext.RenameNodeCommand}"
                                    CommandParameter="{Binding Source={RelativeSource Self}, Path=BindingContext.Node}">
                                    <Image Source="edit.png" Style="{DynamicResource SwipeIcon}" />
                                </SwipeItemView>
                                <SwipeItemView
                                    Command="{Binding Source={x:Reference ItemsListView}, Path=BindingContext.DeleteNodeCommand}"
                                    CommandParameter="{Binding Source={RelativeSource Self}, Path=BindingContext.Node}">
                                    <Image Source="delete.png" Style="{DynamicResource SwipeIcon}" />
                                </SwipeItemView>
                                <SwipeItemView
                                    Command="{Binding Source={x:Reference ItemsListView}, Path=BindingContext.ShareNodeCommand}"
                                    CommandParameter="{Binding Source={RelativeSource Self}, Path=BindingContext.Node}">
                                    <Image Source="share.png" Style="{DynamicResource SwipeIcon}" />
                                </SwipeItemView>
                            </SwipeItems>
                        </SwipeView.LeftItems>
                        <StackLayout Padding="10" x:DataType="models:NodeElement" Orientation="Horizontal"
                                     HeightRequest="28">
                            <Image Source="{Binding ImageSource}" Aspect="AspectFit"
                                   HorizontalOptions="Center" VerticalOptions="Center"
                                   xct:IconTintColorEffect.TintColor="{DynamicResource SecondaryForeground}"/>
                            <Label Text="{Binding Node.Name}"
                                   FontSize="20" TextColor="{DynamicResource Foreground}" LineBreakMode="TailTruncation" />
                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer
                                    NumberOfTapsRequired="1"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:PrivateNodesViewModel}}, Path=SelectNodeCommand}"
                                    CommandParameter="{Binding Node}" />
                            </StackLayout.GestureRecognizers>
                        </StackLayout>
                    </SwipeView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            <CollectionView.EmptyView>
                <ContentView>
                    <StackLayout Padding="50" HorizontalOptions="Center" VerticalOptions="Center">
                        <Image Source="document_search.png" HeightRequest="50"
                               xct:IconTintColorEffect.TintColor="{DynamicResource Foreground}"/>
                        <Label Text="It looks like it's empty here." FontSize="20" Margin="10"
                               TextColor="{DynamicResource Foreground}"/>
                    </StackLayout>
                </ContentView>
            </CollectionView.EmptyView>
        </CollectionView>
    </RefreshView>
</ContentPage>